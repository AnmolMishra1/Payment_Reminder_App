<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Reminder App</title>
    <link href='https://fonts.googleapis.com/css?family=Rubik' rel='stylesheet'/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
         body {
            font-family: 'Rubik', sans-serif;
            background-size: cover;
            background-attachment: fixed;
            background-repeat: no-repeat;
            background-position: center;
            background-color: #FFFFFF;
            background-image: linear-gradient(180deg, #A9C9FF 0%, #FFBBEC 100%);



        
        }
        .container {
            background: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            

            
            
        }
        h1 {
            font-weight: 700;
            color: #343a40;
        }
        .btn-primary, .btn-success {
            font-weight: 600;
        }
        .table {
            background-color: #fff;
            border-radius: 10px;

            overflow: hidden;
            
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .table th {
            background-color: #007bff;
            color: #fff;
        }
        .table td {
            background-color: #f8f9fa;
        }
        .form-row {
            margin-bottom: 20px;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn-sm {
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
        }
        .text-center a {
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="container mt-5 sh">
        <h1 class="text-center mb-4">Payment Reminder</h1>
        <form action="/reminders" method="GET" class="mb-4">
            <div class="form-row">
                <div class="col">
                    <select class="form-control" name="sortBy">
                        <option value="name">Sort by Name</option>
                        <option value="dueDate">Sort by Due Date</option>
                        <option value="category">Sort by Category</option>
                    </select>
                </div>
                <div class="col">
                    <select class="form-control" name="filterBy">
                        <option value="">Filter by Category</option>
                        <option value="Housing">Housing</option>
                        <option value="Utilities">Utilities</option>
                        <option value="Health">Health</option>
                    </select>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <button type="Button" class="btn btn-danger"><%=username%></button>

                     <a href="/logout" class="btn btn-success">Logout</a>
                </div>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Category</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% reminders.forEach(reminder => { %>
                    <tr>
                        <td><%= reminder.id %></td>
                        <td><%= reminder.name %></td>
                        <td><%= reminder.dueDate %></td>
                        <td><%= reminder.category %></td>
                        <td class="action-buttons">
                            <a href="/reminder/<%= reminder.id %>" class="btn btn-info btn-sm">View Details</a>
                            <form method="post" action="/delete/<%= reminder.id %>?_method=DELETE" class="d-inline">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <div class="text-center">
            <a href="/new" class="btn btn-primary">Add New Reminder</a>
            <a href="/print" class="btn btn-success">Print Bills</a>
        </div>
    </div>
</body>
</html> 
